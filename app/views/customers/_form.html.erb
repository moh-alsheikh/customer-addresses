<%= form_for @customer, :html => { :class => 'form-inline' } do |f| %> 
  
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'text_field' %>
 
    <%= f.label :email, :class => 'control-label' %>
    <%= f.text_field :email, :class => 'text_field' %>
    
    <%= f.label  "Started At", :class => 'control-label' %>
    <%= f.text_field :date_became_customer, :class => 'text_field text-center' %>
   
  
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), customers_path, :class => 'btn' %>
                     
<% end %>
